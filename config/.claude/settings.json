{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(diff:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(docker compose:*)",
      "Bash(docker compose exec:*)",
      "Bash(docker compose logs:*)",
      "Bash(bundle install)",
      "Bash(afplay:*)",
      "Bash(gemini:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Read(.env.*)",
      "Read(.env_*)",
      "Read(id_*)",
      "Write(.env.*)",
      "Write(.env_*)",
      "Write(id_*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": false
}
